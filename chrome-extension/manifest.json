{
  "manifest_version": 2,

  "name": "Flux Screen Capture",
  "description": "This extension records a portion of the screen for Flux annotation",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Flux ScreenCap Annotator"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "desktopCapture", 
    "https://localhost:8000/*",
    "tabs", 
    "tts",
    "downloads"
  ]
}